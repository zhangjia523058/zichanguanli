            var checkboxParam = {};
            put(checkboxParam, "needCheckbox", true);
            put(checkboxParam, "checkboxArg", "loanId");  // checkbox 将这个属性赋值给 checkbox 的 value

            // 操作 那一列相关的参数
            var opColumnParam = new Array();
            opColumnParam.push('generateInspectionAssetStageLink');

            var snParam = {};
            snParam.needSn = true;

